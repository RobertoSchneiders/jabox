<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence
   http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd"
	version="1.0">

	<!-- persistence.xml -->

	<persistence-unit name="WicketPersistence">
		<!--
			The provider only needs to be set if you use several JPA providers,
			but good todo anyway!
		-->
		<provider>org.hibernate.ejb.HibernatePersistence</provider>
		<!-- Add your class's here -->
		<class>org.jabox.model.Project</class>
		<class>org.jabox.its.bugzilla.BugzillaRepositoryConfig</class>
		<class>org.jabox.its.jtrac.JtracRepositoryConfig</class>
		<class>org.jabox.its.mantis.MantisRepositoryConfig</class>
		<class>org.jabox.its.redmine.RedmineRepositoryConfig</class>
		<class>org.jabox.cis.hudson.HudsonConnectorConfig</class>
		<class>org.jabox.cis.ehudson.EHudsonConnectorConfig</class>
		<class>org.jabox.mrm.artifactory.ArtifactoryConnectorConfig</class>
		<class>org.jabox.mrm.eartifactory.EArtifactoryConnectorConfig</class>
		<class>org.jabox.mrm.nexus.NexusConnectorConfig</class>
		<class>org.jabox.mrm.scp.ScpConnectorConfig</class>
		<class>org.jabox.scm.beanstalk.BeanstalkConnectorConfig</class>
		<class>org.jabox.scm.git.GITConnectorConfig</class>
		<class>org.jabox.scm.egit.EGITConnectorConfig</class>
		<class>org.jabox.scm.github.GithubConnectorConfig</class>
		<class>org.jabox.scm.svn.SVNConnectorConfig</class>
		<class>org.jabox.scm.esvn.ESVNConnectorConfig</class>
		
		<properties>
			<!-- Scan for annotated classes  -->
			<property name="hibernate.archive.autodetection" value="class" />

			<!-- SQL stdout logging -->
			<property name="hibernate.show_sql" value="true" />
			<property name="hibernate.format_sql" value="false" />
			<property name="use_sql_comments" value="false" />


			<!--	Connecting to mySQL -->
			<!--
				<property name="hibernate.dialect"
				value="org.hibernate.dialect.MySQLDialect" /> <property
				name="hibernate.connection.driver_class"
				value="com.mysql.jdbc.Driver" /> <property
				name="hibernate.connection.url"
				value="jdbc:mysql://localhost:3306/dbname" /> <property
				name="hibernate.hbm2ddl.auto" value="validate" /> <property
				name="hibernate.connection.username" value="blarb" /> <property
				name="hibernate.connection.password" value="blarb" />
			-->



			<!--
				Connecting to HSQL - -> <property name="hibernate.dialect"
				value="org.hibernate.dialect.HSQLDialect" /> <property
				name="hibernate.connection.driver_class"
				value="org.hsqldb.jdbcDriver" /> <property
				name="hibernate.connection.url" value="jdbc:hsqldb:mem:test" />
				<property name="hibernate.connection.username" value="sa" />
				<property name="hibernate.hbm2ddl.auto" value="create-drop" />

				<property name="hibernate.c3p0.acquire_increment" value="1" />
				<property name="hibernate.c3p0.idle_test_period" value="14400" />
				<property name="hibernate.c3p0.timeout" value="25200" /> <property
				name="hibernate.c3p0.max_size" value="8" /> <property
				name="hibernate.c3p0.min_size" value="3" /> <property
				name="hibernate.c3p0.max_statements" value="1" />
			-->



			<!-- Connecting to H2 -->
			<property name="hibernate.dialect" value="org.hibernate.dialect.H2Dialect" />

			<property name="hibernate.connection.driver_class" value="org.h2.Driver" />
			<property name="hibernate.connection.url"
				value="jdbc:h2:~/.jabox/database/db;AUTO_SERVER=TRUE" />
			<property name="hibernate.connection.username" value="sa" />
			<property name="hibernate.hbm2ddl.auto" value="update" />
			<property name="hibernate.connection.password" value="" />

			<property name="hibernate.c3p0.acquire_increment" value="1" />
			<property name="hibernate.c3p0.idle_test_period" value="14400" />
			<property name="hibernate.c3p0.timeout" value="25200" />
			<property name="hibernate.c3p0.max_size" value="8" />
			<property name="hibernate.c3p0.min_size" value="3" />
			<property name="hibernate.c3p0.max_statements" value="1" />

		</properties>
	</persistence-unit>
</persistence>
